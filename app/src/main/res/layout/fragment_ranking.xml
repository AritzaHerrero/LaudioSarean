<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Container -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:gravity="center_vertical">

            <!-- TextView for Ranking -->
            <TextView
                android:id="@+id/textViewRanking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Puntuazio rankinga:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Switch -->
            <Switch
                android:id="@+id/switchIkasle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikaslea"
                android:textColor="@color/black"
                android:layout_gravity="end"/>

        </LinearLayout>

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:orientation="horizontal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp">

            <TextView
                android:id="@+id/pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pos."
                style="@style/GameRankingTextStyle"/>

            <TextView
                android:id="@+id/izena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5sp"
                android:text="Izena"
                style="@style/GameRankingTextStyle" />

            <TextView
                android:id="@+id/pnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntuazioa"
                style="@style/GameRankingTextStyle" />
        </LinearLayout>
        <!-- Contenedor para los TextView dinÃ¡micos -->
        <LinearLayout
            android:id="@+id/linearLayoutRanking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp">
        </LinearLayout>

    </LinearLayout>


</FrameLayout>