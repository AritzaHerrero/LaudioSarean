<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jolasak.SopaLetra.SopaLetra">

    <LinearLayout
        android:id="@+id/linearLayoutMenua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Kronometro TextView -->
        <TextView
            android:id="@+id/txtKronometroa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/rounded_bg_kronometro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPuntuazioa"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Puntuazioa TextView -->
        <TextView
            android:id="@+id/txtPuntuazioa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="10000"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/rounded_bg_puntuazioa"
            app:layout_constraintStart_toEndOf="@+id/txtKronometroa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayoutSopaLetras"
        android:layout_width="381dp"
        android:layout_height="414dp"
        android:layout_margin="8dp"
        android:columnCount="14"
        android:orientation="horizontal"
        android:padding="2dp"
        android:rowCount="12"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutHitzak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <LinearLayout
        android:id="@+id/linearLayoutHitzak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTunnelak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtTunnelak"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />


            <TextView
                android:id="@+id/txtArtilleria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtArtilleria"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAbiazioa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtAbiazioa"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtTropa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtTropa"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLubaki"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtLubaki"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtBunkerrak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtBunkerrak"
                android:background="@drawable/black_border"
                android:padding="8dp"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
