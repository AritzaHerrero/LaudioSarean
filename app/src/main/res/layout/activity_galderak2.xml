<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jolasak.Ruleta.Galderak">


    <TextView
        android:id="@+id/tvGunea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="100sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvGaldera"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Galdera"
        android:textSize="18sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGunea"
        app:layout_constraintVertical_bias="0.05" />

    <RadioGroup
        android:id="@+id/rgErantzunak"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGaldera">


        <RadioButton
            android:id="@+id/rbErantzuna1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />


        <RadioButton
            android:id="@+id/rbErantzuna2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />


        <RadioButton
            android:id="@+id/rbErantzuna3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />


        <RadioButton
            android:id="@+id/rbErantzuna4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/btnErantzun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:text="@string/zuzenduBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgErantzunak" />

</androidx.constraintlayout.widget.ConstraintLayout>
