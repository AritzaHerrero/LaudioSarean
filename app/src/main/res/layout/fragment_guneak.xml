<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GuneakFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivHeaderImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/laudio_udala_logo_zuribeltza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/ibSantutegia"
                        android:layout_width="match_parent"
                        android:layout_height="90sp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Yermoko Andre Mariaren Santutegia BOTOIA"
                        android:scaleType="fitXY"
                        android:src="@drawable/yermoko_andre_mariaren_santutegia" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvSantutegia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/santutegiaIzenburua" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibBurdinHesia"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/burdin_hesia" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvBurdinHesia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/burdinHestiaIzenburua" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibErmita"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/santa_aguedako_ermita" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvErmita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/ermitaIzenburua" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibKatutxaJauregia"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/katuxako_jauregia" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvKatutxaJauregia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/katutxaJauregiaIzenburua" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibEliza"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/lamuzako_san_pedro_eliza" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvEliza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/elizaIzenburua" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibLamuzaJauregia"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/lamuza_jauregia" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvLamuzaJauregia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/lamuzaJauregiaIzenburua" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibLezeagakoSorgina"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/lezeagako_sorgina" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvLegazakoSorgina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/legeazakoSorginaIzenburua" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/ibAzkenEbaluazioa"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/azken_ebaluazioa" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvAzkenEbaluzioa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/azkenEbaluazioaIzenburua" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
